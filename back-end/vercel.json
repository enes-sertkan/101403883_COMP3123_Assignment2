{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/$1"
      },
      {
        "src": "/api/(.*)",
        "dest": "https://your-backend-api.com/$1",
        "headers": { "x-custom-header": "value" }
      }
    ]
  }
  